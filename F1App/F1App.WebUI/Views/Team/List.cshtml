@using F1App.Domain
@model IQueryable<Team>
@{
    ViewBag.Title = "Teams List";
}
<script>
    $(".navbar li.active").removeClass("active");
    $("#TeamLink").addClass("active");
</script>

<div class="panel panel-default">
    <div class="panel-heading">Teams</div>
    <div class="panel-body">
        <table id="teamsTable" class="table table-striped table-bordered dtInit" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Nationality</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.TeamId</td>
                        <td>@t.TeamName</td>
                        <td>@t.TeamNationality</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

