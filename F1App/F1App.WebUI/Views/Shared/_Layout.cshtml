<!DOCTYPE html>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
        <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
        <!--<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>-->
        <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet"/>
    </head>
    <body>
        <div class="navbar navbar-inverse" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    @Html.RouteLink("F1App", new { controller = "Home", action = "Index" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav navbar-nav">
                    <li id ="HomeLink">@Html.RouteLink("Home", new { controller = "Home", action = "Index" })</li>
                    <li id="PilotLink">@Html.RouteLink("Pilots", new { controller = "Pilot", action = "List" })</li>
                    <li id="TeamLink">@Html.RouteLink("Teams", new { controller = "Team", action = "List" })</li>
                    <li id="PilotStandingLink">@Html.RouteLink("Pilots standing", new { controller = "PilotStanding", action = "List" })</li>
                    <li id="TeamStandingLink">@Html.RouteLink("Teams standing", new { controller = "TeamStanding", action = "List" })</li>
                    <li id="ResultLink">@Html.RouteLink("Results", new { controller = "Result", action = "List" })</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div id="JsonGenerator" class="col-xs-3">
                JsonGenerator
            </div>
            <div class="col-xs-8">
                @RenderBody()
            </div>
        </div>
    </body>
</html>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
<script src="~/Scripts/utils.js"></script>