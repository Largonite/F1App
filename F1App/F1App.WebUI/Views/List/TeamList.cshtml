@using F1App.Domain
@model IQueryable<Team>
@{
    ViewBag.Title = "Teams List";
}
<script>
    $(".navbar li.active").removeClass("active");
    $("#TeamLink").addClass("active");
</script>

<div id="JsonGenerator">
    @Html.Action("ShowTeamOptions", "JsonOptions")
</div>
<div id="Teams">
    <div class="panel panel-default">
        <div class="panel-heading">Teams</div>
            <table id="teamsTable" class="table table-striped table-bordered dt" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Nationality</th>
                        <th>Wikipedia</th>
                        <th>Pilots (Id)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.TeamId</td>
                            <td>@t.TeamName</td>
                            <td>@t.TeamNationality</td>
                            <td><a href=@t.TeamUrl>t.TeamUrl</a>@</td>
                            <td edit="false">
                                @foreach(var p in @t.Pilots)
                                {
                                    <p>@p.PilotFName @p.PilotLName (@p.PilotId) </p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

