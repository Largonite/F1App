@using F1App.Domain;
@model IQueryable<TeamStanding>

@{
    ViewBag.Title = "Team Standing";
}

<script>
    $(".navbar li.active").removeClass("active");
    $("#TeamStandingLink").addClass("active");
</script>

<div id="JsonGenerator">
    @Html.Action("ShowTeamStandingOptions", "JsonOptions")
</div>
<div id="TeamStanding">
    <div class="panel panel-default">
        <div class="panel-heading">Teams Standing</div>
        <div class="panel-body">
            <table id="teamStandingTable" class="table table-striped table-bordered dt" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Season</th>
                        <th>Position</th>
                        <th>Team (id)</th>
                        <th>Points</th>
                        <th>Wins</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.StandingId</td>
                            <td>@t.StandingSeason</td>
                            <td>@t.StandingPosition</td>
                            <td>@t.Team.TeamName (@t.TeamId)</td>
                            <td>@t.StandingPoints</td>
                            <td>@t.StandingWins</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

